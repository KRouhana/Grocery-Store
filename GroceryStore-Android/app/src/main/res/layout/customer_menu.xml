<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerMenu">


    <Button
        android:id="@+id/UpdateAccountButton"
        android:layout_width="215dp"
        android:layout_height="49dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="20dp"
        android:text="Update Account"
        app:layout_constraintBottom_toTopOf="@+id/ViewItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ViewOrderButton"
        android:layout_width="215dp"
        android:layout_height="49dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="20dp"
        android:text="View My Orders"
        app:layout_constraintBottom_toTopOf="@+id/LogoutButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewItem" />

    <Button
        android:id="@+id/LogoutButton"
        android:layout_width="215dp"
        android:layout_height="49dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="230dp"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewOrderButton" />

    <Button
        android:id="@+id/ViewItem"
        android:layout_width="215dp"
        android:layout_height="49dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="20dp"
        android:text="View Items"
        app:layout_constraintBottom_toTopOf="@+id/ViewOrderButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UpdateAccountButton" />

</androidx.constraintlayout.widget.ConstraintLayout>